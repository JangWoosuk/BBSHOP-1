<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bbshop.bit.mapper.MyPageMapper">

	<resultMap id="reviewVO" type="com.bbshop.bit.domain.reviewVO" >
		<result property="rv_num" column="rv_num" />
		<result property="title" column="title" />
		<result property="re_date" column="re_date" />
		<result property="re_hit" column="re_hit" />
	</resultMap>

	<select id="getReviewList" resultMap="reviewVO">
		select * 
		from 
			(select sav.sa_date, so.items, sav.savings, sav.order_num
				FROM shop_order so, savings sav
				WHERE so.order_num = sav.order_num )
		where order_num = ( select order_num from shop_order 
								where user_key = #{user_key} )
	</select>

</mapper>