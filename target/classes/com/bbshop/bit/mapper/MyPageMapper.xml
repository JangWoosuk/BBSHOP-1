<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bbshop.bit.mapper.MyPageMapper">

	<resultMap id="savingsVO" type="com.bbshop.bit.domain.SavingsVO" >
		<result property="or_date" column="sa_date" />
		<result property="or_items" column="items" />
		<result property="or_savings" column="savings" />
		<result property="or_num" column="order_num" />
	</resultMap>

	<select id="getSavingsList" parameterType="int" resultMap="savingsVO">
		select * 
		from 
			(select sav.sa_date, so.items, sav.savings, sav.order_num
				FROM shop_order so, savings sav
				WHERE so.order_num = sav.order_num )
		where order_num = ( select order_num from shop_order 
								where user_key = #{user_key} )
	</select>

</mapper>